<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <TextView
        android:id="@+id/recent_summoner_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:maxLength="15"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/delete_summoner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="User1" />

    <ImageView
        android:id="@+id/delete_summoner"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:padding="3dp"
        android:src="@drawable/cross"
        app:layout_constraintBottom_toBottomOf="@id/recent_summoner_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/recent_summoner_item"
        app:layout_constraintTop_toTopOf="@id/recent_summoner_item" />
</androidx.constraintlayout.widget.ConstraintLayout>