<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home">
    <fragment
        android:id="@+id/home"
        android:name="io.github.seoj17.canyongg.ui.home.HomeFragment"
        android:label="HomeFragment">
        <action
            android:id="@+id/action_home_to_registerSummoner"
            app:destination="@id/registerSummoner" />
        <argument
            android:name="summonerName"
            android:defaultValue='""'
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_home_to_SearchSummoner"
            app:destination="@id/searchSummoner" />
        <action
            android:id="@+id/action_home_to_settingFragment"
            app:destination="@id/setting" />
    </fragment>
    <fragment
        android:id="@+id/registerSummoner"
        android:name="io.github.seoj17.canyongg.ui.search.RegisterSummonerFragment"
        android:label="RegisterSummonerFragment">
        <action
            android:id="@+id/action_registerSummoner_to_home"
            app:destination="@id/home">
            <argument android:name="summonerName" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/searchSummoner"
        android:name="io.github.seoj17.canyongg.ui.search.SearchSummonerFragment"
        android:label="SearchSummonerFragment">
        <action
            android:id="@+id/action_SearchSummoner_to_searchResult"
            app:destination="@id/searchResult" />
    </fragment>
    <fragment
        android:id="@+id/searchResult"
        android:name="io.github.seoj17.canyongg.ui.search.SearchResultFragment"
        android:label="SearchResultFragment" >
        <action
            android:id="@+id/action_searchResult_to_detailMatchFragment"
            app:destination="@id/detailMatch" />
        <action
            android:id="@+id/action_searchResult_to_searchSummoner"
            app:destination="@id/searchSummoner" />
    </fragment>
    <fragment
        android:id="@+id/setting"
        android:name="io.github.seoj17.canyongg.ui.setting.SettingFragment"
        android:label="SettingFragment" />
    <fragment
        android:id="@+id/detailMatch"
        android:name="io.github.seoj17.canyongg.ui.detail.DetailMatchFragment"
        android:label="DetailMatchFragment" >
        <action
            android:id="@+id/action_detailMatch_to_searchResult"
            app:destination="@id/searchResult" />
    </fragment>
</navigation>