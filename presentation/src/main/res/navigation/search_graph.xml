<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_graph"
    app:startDestination="@id/search_summoner">

    <fragment
        android:id="@+id/search_summoner"
        android:name="io.github.seoj17.presentation.ui.search.SearchSummonerFragment"
        android:label="@string/toolbar_search_label">
        <action
            android:id="@+id/action_SearchSummoner_to_searchResult"
            app:destination="@id/search_result" />
        <argument
            android:name="summonerName"
            android:defaultValue=""
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="summonerPuuid"
            android:defaultValue=""
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/search_result"
        android:name="io.github.seoj17.presentation.ui.record.SummonerRecordFragment"
        android:label="@string/toolbar_detail_label">

        <argument
            android:name="showBottomNavView"
            android:defaultValue="false" />

        <action
            android:id="@+id/action_searchResult_to_detailMatch"
            app:destination="@id/detail_match" />
        <argument
            android:name="summonerName"
            app:argType="string" />
        <argument
            android:name="summonerPuuid"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/detail_match"
        android:name="io.github.seoj17.presentation.ui.detail.DetailMatchFragment"
        android:label="@string/toolbar_search_result_label">

        <argument
            android:name="showBottomNavView"
            android:defaultValue="false" />

        <argument
            android:name="matchId"
            app:argType="string" />
        <action
            android:id="@+id/action_detail_match_to_search_result"
            app:destination="@id/search_result" />
        <argument
            android:name="puuid"
            app:argType="string" />
    </fragment>
</navigation>